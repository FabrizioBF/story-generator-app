// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  //provider = "sqlite"
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Story {
  id             Int      @id @default(autoincrement())
  text           String   @db.Text
  illustrationb64 String   @db.Text  // Thumbnail comprimida (~50-100KB)
  illustrationUrl String   @default("") // Opcional: URL da imagem completa
  mainCharacter  String   @default("")
  plot           String   @default("")
  ending         String   @default("")
  genre          String   @default("")
  literature     String   @default("")
  createdAt      DateTime @default(now())
  
  // √çndices para performance
  @@index([createdAt])
  @@index([genre])
}