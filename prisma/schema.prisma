// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  //provider = "sqlite"
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Story {
  id               Int      @id @default(autoincrement())
  text             String   @db.Text
  illustrationPath String?  
  mainCharacter    String?  @db.VarChar(100)
  plot             String?  @db.VarChar(200)
  ending           String?  @db.VarChar(100)
  genre            String?
  literature       String?
  createdAt        DateTime @default(now())
  

  
  @@index([createdAt])
  @@index([genre])
  @@index([literature])
}