// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  //provider = "sqlite"
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Story {
  id             Int      @id @default(autoincrement())
  text           String   @db.Text
  illustrationb64 String   @db.Text
  mainCharacter  String   // Novo campo
  plot           String   // Novo campo
  ending         String   // Novo campo
  genre          String   // Novo campo
  literature     String   // Novo campo (tipo de literatura)
  createdAt      DateTime @default(now())
}